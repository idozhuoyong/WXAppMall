/* pages/index/index.wxss */

.page__bd {
    width: 100%;
}

.notice {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.notice_icon {
    width: 30rpx;
    height: 30rpx;
    margin-top: 25rpx;
    margin-left: 25rpx;
}

.notice_swiper {
    width: 680rpx;
    margin-left: 15rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.notice_swiper_item {
    color: #e64340;
    padding-left: 10rpx;
    width: 680rpx;
    height: 80rpx;
    line-height: 80rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    /* letter-spacing: 10rpx; */
    font-size: 24rpx;
}

.goodsCategory_box {
    width: 750rpx;
    height: 350rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    overflow: hidden;
}

.goodsCategory_item {
    width: 150rpx;
    height: 150rpx;
    box-sizing: border-box;
    padding: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.goodsCategory_item_icon {
    width: 70rpx;
    height: 70rpx;
}

.goodsCategory_item_text {
    width: 100rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 24rpx;
}

.banners_box {
    width: 750rpx;
    height: 250rpx;
}

.banners_item {
    width: 100%;
    height: 100%;
}

.banners_item_icon {
    width: 100%;
    height: 100%;
}

.item_title_box {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
}

.item_title {
    float: left;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
}

.line {
    width: 100rpx;
    border: 1px solid #eee;
    float: left;
    margin: 19.5rpx 15rpx;
}

.goods_container {
    width: 750rpx;
    background-color: #efefef;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    overflow: hidden;
}

.goods_box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 10rpx 10rpx 0;
    padding: 10rpx;
    border: 1px solid #f4f4f4;
    width: 345rpx;
    box-sizing: border-box;
}

.goods_img_box {
    width: 320rpx;
    height: 300rpx;
    padding: 0 0 15rpx 0;
}

.goods_img {
    width: 100%;
    height: 100%;
}

.goods_title {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-left: 15rpx;
    box-sizing: border-box;
}

.goods_price {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx 0 10rpx;
    margin-top: 10rpx;
    box-sizing: border-box;
}

.goods_price_current {
    color: #f40;
    font-size: 28rpx;
}

.goods_price_original {
    color: #999;
    font-size: 24rpx;
    text-decoration: line-through #999;
}

.loadmore_box {
    background-color: #efefef;
    padding: 15rpx 0;
    color: #999;
    font-size: 24rpx;
}

.loadmore_text {
    text-align: center;
}

.kanjia_container {
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.kanjia_title_box {
    padding: 15rpx 20rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.kanjia_box {
    display: flex;
    flex-direction: row;    
    margin: 0 20rpx;
    padding: 20rpx 0;
    background-color: #fff;
    border-top: 1rpx solid #eee;
}

.kanjia_icon_box {
    width: 200rpx;
    height: 200rpx;
}

.kanjia_icon {
    width: 100%;
    height: 100%;
}

.kanjia_item_box {
    flex: 1;
    overflow: hidden;
    margin: 0 0 0 10rpx;
}

.kanjia_item_title {
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
}
.kanjia_item_desc {
    height: 100rpx;
    font-size: 24rpx;
    color: #999;
}
.kanjia_item_price {
    display: flex;
    flex-direction: row;
}
.kanjia_btn {
    font-size: 24rpx;
    width: 120rpx;
    color: #fff;
    background-color: #e64340;
}

